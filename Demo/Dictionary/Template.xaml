<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ex="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:local="clr-namespace:Demo.Dictionary">
    <DataTemplate x:Key="ALine">
        <ItemsControl IsTabStop="False" ItemsSource="{Binding}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="200*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding LineNum}" Foreground="{StaticResource FontColor}" FontSize="16"/>
                        <Slider Grid.Column="1" Style="{StaticResource SliderStyle1}" IsHitTestVisible="False"  Maximum="1"
                                Value="{Binding Progress}" Foreground="Red"/>
                        <TextBlock Grid.Column="2" Text="{Binding Progress}" Foreground="White" FontSize="16"/>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DataTemplate>
